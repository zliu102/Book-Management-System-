<style>
    .thumbnail{
        text-align:center;
    }
    .test img{width:200px;overflow:hidden;}
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">Student Home</li>
            </ol>
            <h2 style="text-align: center" class="btn-custom">Student Menu</h2>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="thumbnail">
                                <img class=test src="https://upload.wikimedia.org/wikipedia/commons/3/3d/Book_Collage.png" width="500"  height="100" alt="Modify book information" class="img-responsive" alt="Responsive image">
                                <div class="caption">
                                    <h3 style="text-align: center ">List Book and check out</h3>
                                    <p><a href="/student/{{data._id}}/book" class="btn btn-primary" role="button">Enter</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">Panel heading</div>
                        <div class="panel-body">
                            <h3>{{data.CWID}}: {{data.FirstName}} {{data.LastName}}</h3>
                        </div>
                        <table class="table">
                            <tr>
                                <th>Course ID</th>
                                <th>Course Name </th>
                            </tr>
                            {{#each data.Courses}}
                                <tr>
                                    <td>{{this.CourseID}}</td>
                                    <td>{{this.CourseName}}</td>
                                </tr>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>