<div class="container">
    <div class="row">
        {{#if isStudent}}
            <div class="col-sm-12 col-xs-12">
                <div class="form-vertical">
                    <h2>STUDENT</h2>
                    <p>For Student Sign Up</p>
                    <form class="form-group" action="/admin/add-student-info" method="post">
                        <div class="input-box">
                            <label for="student_email">Email address</label>
                            <input required="true" type="email" name="email" class="form-control" id="student_email" placeholder="Email">
                        </div>
                        <div class="input-box">
                            <label for="student_password">Password</label>
                            <input required="true" type="password" name="password" class="form-control" id="student_password" placeholder="Password">
                        </div>
                        <div class="input-box">
                            <label for="cwid">CWID</label>
                            <input required="true" type="text" name="CWID" class="form-control" id="cwid" placeholder="A00000000">
                        </div>
                        <div class="input-box">
                            <label for="f_name">First name</label>
                            <input required="true" type="text"  name="f_name" class="form-control" id="f_name" placeholder="first name">
                        </div>
                        <div class="input-box">
                            <label for="l_name">Last name</label>
                            <input required="true" type="text" name="l_name" class="form-control" id="l_name" placeholder="last name">
                        </div>
                        <div class="input-box">
                            <label for="Birthday">Birthday</label>
                            <input readonly type="text"  name="birthday" class="form-control" id="Birthday" value="{{this.Birthday}}">
                        </div>
                        <div class="input-box">
                            <label for="studentCourse">Select Course</label>
                            <select multiple name="studentCourse" class="form-control" style="height:300px">
                                {{#each Courses}}
                                    <option studentCourse="{{ this.CourseName }}" >{{ this.CourseID }}: {{ this.CourseName }}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-full">Submit</button>
                    </form>
                </div>
            </div>
        {{else}}
            <div class="col-sm-12 col-xs-12">
                <div class="form-vertical">
                    <h2>STAFF</h2>
                    <p>For Staff/Teacher Sign Up</p>
                    <form class="form-group" action="/admin/add-staff-info" method="post">
                        <div class="input-box">
                            <label for="staff_email">Email Address</label>
                            <input required="true" type="email" name="email" class="form-control" id="staff_email" placeholder="your@email.com">
                        </div>
                        <div class="input-box">
                            <label for="staff_password">Password</label>
                            <input required="true" type="password" name="password" class="form-control" id="staff_password">
                        </div>
                        <div class="input-box">
                            <label for="SSN">SSN</label>
                            <input required="true" type="text" name="SSN" class="form-control" id="SSN" placeholder="000-000-0000">
                        </div>
                        <div class="input-box">
                            <label for="FirstName">First Name</label>
                            <input required="true" type="text" name="f_name" class="form-control" id="FirstName" placeholder="First Name">
                        </div>
                        <div class="input-box">
                            <label for="LastName">Last Name</label>
                            <input required="true" type="text" name="l_name" class="form-control" id="LastName" placeholder="Last Name">
                        </div>
                        <div class="input-box">
                            <label for="Birthday">Birthday</label>
                            <input readonly type="text" name="birthday" class="form-control" id="Birthday" value="{{this.Birthday}}">
                        </div>
                        <div class="input-box">
                            <label for="JobTitle">Job Title</label>
                            <input type="text" name="JobTitle" class="form-control" id="JobTitle" placeholder="Job Title">
                        </div>
                        <div class="input-box">
                            <label for="workFor">Select Department</label>
                            <select name="workFor">
                                {{#each Department}}
                                    <option value="{{this.DeptID}}:{{this._id}}:{{this.DeptName}}">{{this.DeptID}}: {{this.DeptName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="input-box">
                            <div class="form-group">
                                <label class="radio-inline"><input type="radio" value="1" checked name="level">1.Teacher</label>
                                <label class="radio-inline"><input type="radio" value="0" name="level">2.Staff</label>
                            </div>
                        </div>
                        <button type="submit" class="btn  btn-full">Submit</button>
                    </form>
                </div>
            </div>
        {{/if}}
    </div>
</div>
<script>
    $('#Birthday').datetimepicker({
        format: 'yyyy-mm-dd',
        startView: 4,
        minView: 2,
        initialDate: '2000-01-01'
    });
</script>